    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nano",
            "cwd": "${workspaceFolder}/nano",
            "program": "${workspaceFolder}/nano/node_modules/ts-node/dist/bin.js",
            "args": [ "src/nano-calc.ts" ],
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**/*.js"],
            "env": { "TS_NODE_PROJECT": "tsconfig.json" }
        },
    ]
}
